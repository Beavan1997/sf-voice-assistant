{
  "manifest_version": 3,
    "name": "Salesforce Voice Assistant",
    "description": "A Salesforce virtual assistant for hands free voice commands",
    "version": "1.0",
    "host_permissions": ["https://login.salesforce.com/*","https://bjm123-dev-ed.my.salesforce.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "microphone.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "content_scripts": [{
      "matches": ["https://salesforce.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }]
}
